---
const services = [
  {
    step: "01",
    name: "Vestidos de fiesta",
    description: ["Novias", "Egresos", "15 años"],
    pathImage: "/img/img2.jpg",
  },
  {
    step: "02",
    name: "Confección",
    description: [
      "Modelos a pedido o elección",
      "Indumentaria de trabajo",
      "Indumentaria escolar",
      "indumentaria básica",
    ],
    pathImage: "/img/img1.jpeg",
  },
  {
    step: "03",
    name: "Bordados",
    description: ["Pedrería", "Bordados a máquina"],
    pathImage: "/img/img4.jpeg",
  },
];
---

<section class="py-16 sm:py-20">
  <div class="mx-auto max-w-2xl px-4 sm:px-6 lg:max-w-7xl lg:px-8">
    <div class="flex flex-col gap-12 sm:gap-16">
      <h2 class="text-3xl font-medium tracking-tight sm:text-4xl">Servicios</h2>
      <div class="grid gap-8 lg:grid-cols-3">
        {
          services.map((service) => (
            <div class="bg-primary-500/10 dark:bg-primary-400/10 flex flex-col rounded-3xl overflow-hidden">
              <img
                class="h-auto w-full"
                width="1280"
                height="640"
                src={service.pathImage}
                alt="Hero picture"
              />
              <div class="flex flex-col gap-4 px-6 py-8">
                <h3 class="text-xl font-medium">{service.name}</h3>
                <ul>
                  {service.description.map((d) => (
                    <li class="flex gap-3">
                    <svg
                      class="text-primary-600 dark:text-primary-400 h-6 w-6 flex-shrink-0"
                      xmlns="http://www.w3.org/2000/svg"
                      viewBox="0 0 24 24"
                      fill="currentColor"
                      aria-hidden="true"
                    >
                      <path d="M12 22C6.47715 22 2 17.5228 2 12C2 6.47715 6.47715 2 12 2C17.5228 2 22 6.47715 22 12C22 17.5228 17.5228 22 12 22ZM11.0026 16L18.0737 8.92893L16.6595 7.51472L11.0026 13.1716L8.17421 10.3431L6.75999 11.7574L11.0026 16Z" />
                    </svg>
                    <span>{d}</span>
                  </li>
                  ))}
                </ul>
              </div>
            </div>
          ))
        }
      </div>
    </div>
  </div>
</section>
